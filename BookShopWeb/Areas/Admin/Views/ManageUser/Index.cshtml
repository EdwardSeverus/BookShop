@model IEnumerable<ApplicationUser>
@using BookShop.Models.ViewModels;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "User Management";
}
<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Create a User</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="margin:auto">
        <thead>
            <tr>
                <th width="20%">
                    FirstName
                </th width="20%">
                <th>
                    LastName
                </th>
                <th width="30%">
                    Email
                </th>
                <th width="10%">
                    Role
                </th>
                <th width="20%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        @{
                            var roles = await UserManager.GetRolesAsync(user);
                        }
                        @foreach (var role in roles)
                        {
                            <span>@role</span>
                        }
                    </td>
                    <td>
                        <div class="w-100 btn-group " role="group">
                            <button type="button" class="btn btn-outline-primary mx-2" data-bs-toggle="modal" data-bs-target="@("#editRoleModal-" + user.Id)"><i class="bi bi-pencil-square"></i></button>
                            @await Html.PartialAsync("_EditRolePartialView",user)                           
                            <button type="button" class="btn btn-outline-danger mx-2" data-bs-toggle="modal" data-bs-target="@("#deleteUserModal-" + user.Id)"><i class="bi bi-trash-fill"></i></button>
                            @await Html.PartialAsync("_deleteUserPartialView",user)
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
