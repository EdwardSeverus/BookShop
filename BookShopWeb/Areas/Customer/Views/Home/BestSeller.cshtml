@model IEnumerable<BookShop.Models.ViewModels.ProductCountViewModel>
@using BookShop.Models.ViewModels;


<div class="container " style="width:90%">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Best Seller</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        @foreach (var obj in Model)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <a href="@Url.Action("Details", "Home", new { id = obj.Product.Id })">
                    <div class=" mb-4" style="text-align:center">
                        <div class="image-container">
                            <img src="@obj.Product.ImageUrl" class="card-img-top image" style="height:200px;width:150px;" alt="Product Image">
                        </div>
                        <p>@obj.Product.Title</p>
                        <p style="margin-top:-20px"><strong>Tk. </strong>@(obj.Product.Price)</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
