@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Notification" />

<div class="row container">
    @foreach (var obj in Model)
    {
        <div class="col-6 col-md-4 col-lg-3 col-xl-2 myCard">
            <img src="@obj.ImageUrl" class="card-img-top">
            <h5>@obj.Title</h5>
            <p><i class="bi bi-person"></i>&nbsp; @obj.Author</p>
            <p><i class="bi bi-tags"></i>&nbsp; @obj.Category.Name</p>
            <h5><i class="bi bi-currency-dollar"></i>@(obj.Price)</h5>
            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@obj.Id">Details</a>
        </div>
    }
</div>
